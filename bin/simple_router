#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'
Bundler.setup :default

require 'gli'
require 'trema'

# patch_panel command
module SimpleRouterApp
  extend GLI::App

  desc 'Dump the routing table.'
  arg_name 'dpid'
  command :dump_routing_tb do |c|
    c.desc 'Location to find socket files'
    c.flag [:S, :socket_dir], default_value: Trema::DEFAULT_SOCKET_DIR

    c.action do |_global_options, options, args|
      dpid = args[0].hex
      puts "OK"
      #puts Trema.trema_process('SimpleRouter', options[:socket_dir]).controller.dump(dpid)
    end
  end

  exit run(ARGV)
end
